<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#80FF6B6B" />
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="#FFFF6B6B" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#60FF6B6B" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#FFFF6B6B" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30FF6B6B" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
</selector>